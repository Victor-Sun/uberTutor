<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
	"http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
	<constant name="struts.convention.default.parent.package" value="crud-default" />
	<constant name="struts.convention.package.locators" value="web,action" />
	<constant name="struts.convention.package.locators.basePackage" value="com.ubertutor.action" />
	<!-- 设置Web应用的默认编码集为UTF-8 -->
	<constant name="struts.i18n.encoding" value="UTF-8" />
	<!-- 设置Struts2默认的ObjectFactory为spring -->
	<constant name="struts.objectFactory" value="spring" />
	<!-- 设置Struts2应用是否处于开发模式，通常在开发调试阶段设为true,正式上线后可设为false -->
	<constant name="struts.devMode" value="false" />
	<!-- 设置Struts2的默认主题为simple -->
	<constant name="struts.ui.theme" value="simple" />
	<constant name="struts.enable.DynamicMethodInvocation" value="true" />

		<!-- 用于CRUD Action的parent package -->
	<package name="crud-default" extends="convention-default">
		<!-- 基于paramsPrepareParamsStack,
			增加store interceptor保证actionMessage在redirect后不会丢失 -->
		<interceptors>
			
			<!-- 
			<interceptor name="exceptionHandlingInterceptor" class="com.gnomon.common.exception.ExceptionHandlingInterceptor"/>
			 -->
			<interceptor-stack name="crudStack">
			
				<!-- 
				<interceptor-ref name="exceptionHandlingInterceptor" />
				 -->

				
				<interceptor-ref name="store">
					<param name="operationMode">AUTOMATIC</param>
				</interceptor-ref>
				<interceptor-ref name="paramsPrepareParamsStack" />
				
				
			</interceptor-stack>
		</interceptors>

		<default-interceptor-ref name="crudStack" />
		
		<!-- PDMS Session 超时跳转的登录地址 根据现场环境配置 -->
		<global-results>
		    <result name="login" type="redirect">/login.jsp</result>
		</global-results>
				
	</package>



</struts>


		StringBuffer sql = new StringBuffer();
		sql.append(" SELECT *");
		sql.append(" FROM");
		sql.append(" V_SYS_USER");
		sql.append(" ORDER BY EMPLOYEE_NO");

		// 返回结果
		return this.jdbcTemplate.queryForList(sql.toString());
    }
	

/**
 * 部门空间-文档管理-修改文件夹
 */
Ext.define('ExtApp.view.deptworkspace.document.ModifyDeptFolder',{
	extend:'Ext.window.Window',
	xtype:'modifyDeptFolder',

	controller:'modifyDeptFolder',

	modal: true,
	closable: false,
	
	layout:{
		type:'vbox',
  		align:'stretch'
  	},
	
	width: 500,
	height: 600,
	
	title: '修改文件夹',
	
	initComponent: function() {
		var me = this;
		
		var privilegeStore = Ext.create(
			'ExtApp.store.deptworkspace.DeptFolderPrivilegeStore');
		privilegeStore.getProxy().extraParams = {
			folderId: me.folderId
		};
		privilegeStore.load();

		this.items = [{
			xtype:'fieldset',
			layout: 'fit',
			height: 100,
			margin:10,
	    	title: '基本信息',
	    	collapsible:'true',
	    	items: [{
	    		xtype: 'form',
	    		margin:2,
	    		layout: 'column',
				items: [{
					xtype: 'textfield',
					columnWidth: 1,
					name: 'folderName',
					fieldLabel: '文件夹名称',
					labelAlign: 'right',
					allowBlank:false,
					maxLength:20,
					value: me.folderName
				}],
				tbar: ['->',{
			    	xtype:'button',
					text:'保存',
					iconCls: 'x-fa fa-save',
					handler: 'saveFolderInfo'
			    }]
	    	}]
		},{
			xtype:'fieldset',
			layout: 'fit',
			flex:1,
			margin:10,
	    	title: '权限信息',
	    	collapsible:'true',
	    	items: [{
	    		xtype: 'panel',
	    		layout: 'fit',
				items: [{
					xtype:'grid',
					margin:2,
			        store: privilegeStore,
	                columns: [{
						xtype: 'rownumberer'
					},{
				    	text: '用户',
				    	flex: 1,
				    	dataIndex: 'userName'
				    },{
				    	text: '管理文件夹', 
				    	itemId: 'ccManage',
				    	xtype: 'checkcolumn',
				    	width: 90,
				    	dataIndex: 'ownerPrivilege',
				    	listeners: {
				    		checkchange: 'onCheckchange'
				    	}
				    },{
				    	text: '读取文件',
				    	itemId: 'ccRead',
				    	xtype: 'checkcolumn',
				    	width: 80,
				    	dataIndex: 'readPrivilege',
				    	listeners: {
				    		checkchange: 'onCheckchange'
				    	}
				    },{
				    	text: '上传文件',
				    	itemId: 'ccUpload',
				    	xtype: 'checkcolumn',
				    	width: 80,
				    	dataIndex: 'uploadPrivilege',
				    	listeners: {
				    		checkchange: 'onCheckchange'
				    	}
				    },{
				    	text: '删除文件',
				    	itemId: 'ccDelete',
				    	xtype: 'checkcolumn',
				    	width: 80,
				    	dataIndex: 'deletePrivilege',
				    	listeners: {
				    		checkchange: 'onCheckchange'
				    	}
		            }],
		            tbar: [{
//		            	xtype:'checkboxfield',
//						fieldLabel:'全部门可见',
//						labelAlign: 'right',
//						labelSeparator: '',
//						listeners: {
//							change: 'onChangeDeptPrivilege'
//						}
//		            },'->',{
	  	            	text: '添加人员',
	  	            	iconCls: 'fa fa-user',
	  	            	handler: 'selUser'
	  	            }]
				}]
	    	}]
		}];
		this.tools = [{
			text:'关闭',
			xtype: 'button',
			iconCls: 'x-fa fa-close',
			handler: 'close'
		}];
		this.callParent(arguments);
	}
});
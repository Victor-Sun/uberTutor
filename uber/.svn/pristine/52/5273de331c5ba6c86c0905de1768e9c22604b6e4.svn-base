/**
 * 项目任务查询 Controller
 */
Ext.define('ExtApp.view.deptworkspace.task.DeptProjectTaskController', {
    extend: 'ExtApp.view.common.BaseViewController',
    alias: 'controller.deptProjectTask',

    // 查询
    search: function(btn, e) {
    	var me = this;
    	me.view.mask('Please Waiting...');
    	var form = me.view.down('toolbar').down('form').getForm();
    	var store = Ext.create(
			'ExtApp.store.deptworkspace.DeptProjectTaskStore');
    	store.getProxy().extraParams = {
			searchModel: Ext.encode(form.getFieldValues())
		};
    	store.load();
    	store.on('load', function() {
    		me.view.down('grid').setStore(this);
    		me.view.down('pagingtoolbar').setStore(this);
    		me.view.unmask();
    	});
    },
    
    // 重置
    reloadSearch: function() {
    	var me = this;

    	var form = this.view.down('toolbar').down('form').getForm();
    	Ext.each(form.getFields().items, function(field) {
    		if (field.xtype != 'displayfield') {
    			if (field.xtype == 'checkbox') {
        			field.setValue(true);
        		} else {
        			field.setValue('');
        		}
    		}
		});
    	this.search();
    },
    
    // 导出
    export2Excel:function(){
    	var me = this;
    	var url = 'rpt=pm/pm_dept_task_list.brt&emitter=toxls';
    	// 查询条件
    	var params = '';
    	var form = me.view.down('toolbar').down('form').getForm();
    	// 任务名称
    	if (form.findField('searchTaskName').value !='') {
    		params += 'searchTaskName=' + form.findField('searchTaskName').value + ';';
    	}
    	// 状态
    	var statusCode = "";
    	if (form.findField('searchNotStart').checked) {
    		statusCode += "'TASK_STATUS_NOT_START'";
    	}
    	if (form.findField('searchProcessing').checked) {
    		if (statusCode.length > 0) {
    			statusCode += ",";
    		}
    		statusCode += "'TASK_STATUS_IN_PROCESS'";
    	}
    	if (form.findField('searchComplete').checked) {
    		if (statusCode.length > 0) {
    			statusCode += ",";
    		}
    		statusCode += "'TASK_STATUS_CLOSED'";
    	}
    	if (statusCode.length > 0) {
    		params += 'searchStatusCode=' + statusCode + ';';
    	}
    	// 计划完成时间From
    	if (form.findField('searchDueDateFrom').value != '' && form.findField('searchDueDateFrom').value != null) {
    		params += 'searchDueDateFrom=' + ExtApp.util.Util.formatDate(form.findField('searchDueDateFrom').value, '-') + ';';
    	}
    	// 计划完成时间To
    	if (form.findField('searchDueDateTo').value != '' && form.findField('searchDueDateTo').value != null) {
    		params += 'searchDueDateTo=' + ExtApp.util.Util.formatDate(form.findField('searchDueDateTo').value, '-') + ';';
    	}
    	// 实际完成时间From
    	if (form.findField('searchAFDateFrom').value != '' && form.findField('searchAFDateFrom').value != null) {
    		params += 'searchAFDateFrom=' + ExtApp.util.Util.formatDate(form.findField('searchAFDateFrom').value, '-') + ';';
    	}
    	// 实际完成时间To
    	if (form.findField('searchAFDateTo').value != '' && form.findField('searchAFDateTo').value != null) {
    		params += 'searchAFDateTo=' + ExtApp.util.Util.formatDate(form.findField('searchAFDateTo').value, '-') + ';';
    	}
    	// 项目
    	if (form.findField('searchProgram').value != '' && form.findField('searchProgram').value != null) {
    		params += 'searchProgram=' + form.findField('searchProgram').value + ';';
    	}
    	// 车型
    	if (form.findField('searchVechile').value != '' && form.findField('searchVechile').value != null) {
    		params += 'searchVechile=' + form.findField('searchVechile').value + ';';
    	}
    	// 责任人
    	if (form.findField('searchTaskOwner').value !='') {
    		params += 'searchTaskOwner=' + form.findField('searchTaskOwner').value + ';';
    	}
    	// 进展状态
    	var progress = "";
    	if (form.findField('searchProgress_1').checked) {
    		progress += "'GREEN', 'GRAY'";
    	}
    	if (form.findField('searchProgress_2').checked) {
    		if (progress.length > 0) {
    			progress += ",";
    		}
    		progress += "'YELLOW'";
    	}
    	if (form.findField('searchProgress_3').checked) {
    		if (progress.length > 0) {
    			progress += ",";
    		}
    		progress += "'RED'";
    	}
    	if (progress.length > 0) {
    		params += 'searchProgress=' + progress + ';';
    	}
    	// 风险状态
    	var risk = "";
    	if (form.findField('searchRisk_1').checked) {
    		risk += "'TASK_PROGRESS_STATUS_G'";
    	}
    	if (form.findField('searchRisk_2').checked) {
    		if (risk.length > 0) {
    			risk += ",";
    		}
    		risk += "'TASK_PROGRESS_STATUS_GY'";
    	}
    	if (form.findField('searchRisk_3').checked) {
    		if (risk.length > 0) {
    			risk += ",";
    		}
    		risk += "'TASK_PROGRESS_STATUS_Y'";
    	}
    	if (form.findField('searchRisk_4').checked) {
    		if (risk.length > 0) {
    			risk += ",";
    		}
    		risk += "'TASK_PROGRESS_STATUS_R'";
    	}
    	if (form.findField('searchRisk_5').checked) {
    		if (risk.length > 0) {
    			risk += ",";
    		}
    		risk += "'TASK_PROGRESS_STATUS_B'";
    	}
    	if (!(form.findField('searchRisk_1').checked &&
    			form.findField('searchRisk_2').checked &&
    			form.findField('searchRisk_3').checked &&
    			form.findField('searchRisk_4').checked &&
    			form.findField('searchRisk_5').checked)) {
        	if (risk.length == 0) {
        		risk = "'TASK_PROGRESS_STATUS_GREY'";
        	}
        	params += 'searchRisk=' + risk + ';';
    	}
    	
    	if (params.length > 0) {
    		url += '&params=' + params;
    	}
    	ExtApp.util.Util.openReport(encodeURI(url));
    }
});

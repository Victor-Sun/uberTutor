
Ext.define('ExtApp.view.myworkspace.task.PmTaskForumController', {
    extend: 'Ext.app.ViewController',
    alias: 'controller.PmTaskForum',
   
	// 提出问题
    uploadProjectDocs: function() {
    	var view = this.getView();
    	this.dialog = view.add({
        	xtype: 'PmTaskForumQe'
        });
    	this.dialog.show();	
    },
    
    // 回答
    answer: function(grid , td , cellIndex , record , tr , rowIndex , e , eOpts) {
    	var rec = grid.getStore().getAt(cellIndex);
    	var String1 = rowIndex.id;
    	var String2 = String1.substring(String1.lastIndexOf('-')+1,String1.length);
		var view = this.getView();
    	this.dialog = view.add({
        	xtype: 'pmTaskForumAw',
    		keyId: String2
        });
    	this.dialog.show();	
    },
    
    // 删除
    deleteAdvice: function(grid, rowIndex) {
    	grid.getStore().removeAt(rowIndex);
    }

});

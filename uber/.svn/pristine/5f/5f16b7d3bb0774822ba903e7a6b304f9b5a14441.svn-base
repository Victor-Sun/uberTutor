/**
 * 项目管理-项目文档
 */
Ext.define('ExtApp.view.projectManagement.document.ProjectDocumentBase',{
	extend:'Ext.panel.Panel',
	xtype:'projectDocumentBase',

	layout: 'fit',
	
	title: '项目文档',
	
	controller:'projectDocumentBase',
	
	initComponent: function() {
		var me = this;
		var dtStore = Ext.create(
				'ExtApp.store.projectmanagement.ProjectDocumentTreeStore');
		dtStore.getProxy().extraParams = {
			programId: me.programId,
			sourceType: me.sourceType
		};
		dtStore.load();
	
		this.items = [{
			xtype:'panel',
			margin: 10,
			layout:{
				type:'hbox',
				align:'stretch'
			},
			items:[{
				xtype:'panel',
				flex:1,
				margin:5,
				cls:'shadow',
				layout:{
					type: 'fit'
				},
				items:[{
					xtype:'treepanel',
					scrollable:'y',
					rootVisible: false,
                    store:dtStore,
					listeners:{
						itemclick: 'onItemclick',
						itemcontextmenu: 'onItemcontextmenu',
						beforeitemexpand: function(record, eOpts) {
							dtStore.getProxy().extraParams.sourceType =
								record.get('sourceType');
							dtStore.getProxy().extraParams.programId = 
								me.programId;
					    }
					}
				}]
			},{
				xtype:'panel',
				margin:5,
				cls:'shadow',
				flex:3,
				reference: 'mainCardPanel',
				layout: {
					type: 'card'
				}
			}]
		}];
		this.callParent(arguments);
	}
});
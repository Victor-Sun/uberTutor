/**
 * 项目管理-车型项目-节点分布图
 */
Ext.define('ExtApp.view.projectmanagement.vehicle.NodeTrendChart',{
	extend: 'Ext.panel.Panel',
	xtype: 'nodeTrendChart',

	layout: 'fit',
	
	initComponent: function() {
		// Store
		var store = Ext.create('ExtApp.store.projectmanagement.VehicleDashboardNodeTrendStore');
		store.getProxy().extraParams = {programVehicleId: this.programVehicleId};
		store.load();
		
		this.items = [{
			xtype: 'cartesian',
	        height: 310,
	        store: store,
	        axes: [{
	        	type: 'numeric',
	        	grid: true,
	        	position: 'left',
	        	minimum: 0,
	        	title: {
	        		text: '节点数',
	        		fontSize: 13
	        	},
	        	fields: 'nodeCount'
	        },{
	        	type: 'category',
	        	position: 'bottom',
	        	title: {
	        		text: '日期',
	        		fontSize: 13
	        	},
	        	label: {
	        		rotate: {
	        			degrees: -45
	        		}
	        	},
	        	fields: 'dateTo'
	        }],
	        series: [{
	        	type: 'bar',
	        	xField: 'dateTo',
	        	yField: 'nodeCount',
	        	label: {
	        		display: 'insideEnd',
	        		field: 'nodeCount',
	        		renderer: Ext.util.Format.numberRenderer('0'),
	        		orientation: 'horizontal',
	        		font: '10px Helvetica'
        		}
	        }]
		}];
		this.callParent();
	}
});
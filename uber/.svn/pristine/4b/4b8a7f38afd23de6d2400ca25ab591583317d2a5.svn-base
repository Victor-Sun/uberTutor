Ext.define('ExtApp.view.projectManagement.issue.ProjectVehicleOpenIssueLineChart',{
	xtype:'projectVehicleOpenIssueLineChart',
	extend:'Ext.Panel',
	controller: 'projectVehicleOpenIssueLineChart',
	title:'趋势图',
	width: 650,
	initComponent: function() {
		var me = this;
		var projectOpenIssueLineStore = Ext.create('ExtApp.store.projectmanagement.issue.ProjectVeicleOpenIssueLineStore');
		projectOpenIssueLineStore.load({params:{programVehicleId: me.programVehicleId}});
		me.items = [{
	        xtype: 'cartesian',
	        reference: 'chart',
	        width: '100%',
	        height: 500,
	        legend: {
	            type: 'sprite',
	            docked: 'right'
	        },
	        store: projectOpenIssueLineStore,
	        insetPadding: 40,
	        
	        axes: [{
	            type: 'numeric',
	            fields: ['data1', 'data2', 'data3', 'data4' ],
	            position: 'left',
	            grid: true,
	            minimum: 0
	        }, {
	            type: 'category',
	            fields: 'month',
	            position: 'bottom',
	            grid: true,
	            label: {
	                rotate: {
	                    degrees: -45
	                }
	            }
	        }],
	        series: [{
	            type: 'line',
	            title: 'Total',
	            xField: 'month',
	            yField: 'data1',

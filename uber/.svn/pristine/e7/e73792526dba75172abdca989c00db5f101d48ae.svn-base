/**
 * 项目管理-车型看板-更改项目状态
 */
Ext.define('ExtApp.view.projectmanagement.vehicle.ChangeReportStatusController', {
    extend: 'Ext.app.ViewController',
    alias: 'controller.changeReportStatus',

    //确认
    confirm: function(btn) {
    	var me = this;
        var form = this.view.down('form').getForm();
        if (form.isValid()){
        	me.view.mask('Please Waiting...');
            form.submit({
                clientValidation: true,
                url: '/pdms/pm/project-status-report!changeStatusReport.action',
                params: {
                	programId: this.view.programId,
                	programVehicleId: this.view.programVehicleId,
                	model: Ext.encode(form.getFieldValues())
                },
                scope: me,
                success: function(form, action) {
                	me.view.unmask();
                	ExtApp.util.Util.showToast("更新成功！");
                	me.view.parentCaller.refreshView();
                	me.view.close();
                },
                failure: function(form, action) {
                	me.view.unmask();
                	ExtApp.util.Util.handleFormFailure(action);
                }
            });
        }
    },

    //取消
    cancel: function() {
    	this.view.close();
    }

});

.timelinepanel {

  .gate.sch-event-milestone .task {
    background: transparent;
  }

  .gate.sch-event-milestone .task-inner {

    border-top-color: #371cff;
    overflow: visible;
    top: 30px;

    .task-inner-body {
      background: #371cff;
      width: 20px;
      height: 20px;
      left: -10px;
      top: -30px;
      color: white;
      position: absolute;
    }

    .task-inner-extra {
      border-left-style: dotted;
      position: absolute;
      border-left-color: #371cff;
      border-left-width: 1px;
      left: -1.5px;
    }
  }
}
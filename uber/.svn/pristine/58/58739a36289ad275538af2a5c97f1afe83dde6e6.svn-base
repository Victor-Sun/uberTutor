/**
 * 质量问题管理-问题提交-知会-人员选择窗口
 */
Ext.define('ExtApp.view.qualityissuemanagement.qesubmission.QeNotifySelectWindow',{
	extend:'Ext.window.Window',
	xtype:'qeNotifySelectWindow',
	requires:[  
		'Ext.ux.form.SearchField'  
	],
	viewModel: 'qeNotifySelectWindow',
	controller: 'qeNotifySelectWindow',
	closeAction:"hide",
	modal: true,
    width: 800,

	
	initComponent: function() {
		var bodyHeight = Ext.Element.getViewportHeight() - 100;
		this.height = bodyHeight;

		this.items =[{
			xtype:'panel',
		    width: 500,
		    height: 400,
	
			layout:{
				type:'hbox',
				align:'middle'
			},
			items:[{
		        xtype:'qeNotifySelectMemberTree',
		        margin: '49 0 0 20',
		        height: '100%',
		        width: '45%'
			},{
				xtype:'toolbar',
				layout:{
					type:'vbox'
				},
				items:[{
					xtype:'button',
			        margin: '0 0 20 0',
					iconCls:'x-fa fa-arrow-circle-right',
			        style: '-webkit-border-radius:20px;padding: 0px;',
	                scale: 'large',
	        		handler: 'addMember'
				},{
					xtype:'button',
			        margin: '20 0 0 0',
			        padding:'0 0 0 0',
					iconCls:'x-fa fa-arrow-circle-left',
			        style: '-webkit-border-radius:20px;padding: 0px;',
	                scale: 'large',
	        		handler: 'removeMember'
				}]
			},{
				xtype:'qeNotifySelectedMemGrid',
		        margin: '49 10 0 10',
		        height: '100%',
		        width: '45%'
		    }]
		}];
	
		this.buttons = [{
			text: '确定',
			handler: 'confirm'
		},{
			text: '取消',
			handler: 'closeWin'
		}];
		this.layout = "fit";
	    this.callParent(arguments);
	}
});
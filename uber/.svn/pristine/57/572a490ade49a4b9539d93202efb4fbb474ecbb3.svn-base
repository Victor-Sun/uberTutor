/**
 * 问题类型维护
 */
Ext.define('ExtApp.view.systemmanagement.issuetype.PmIssueType',{
	extend:'Ext.panel.Panel',
	xtype:'pmIssueType',
	controller: 'pmIssueType',
	layout:'fit',
	margin:10,
	initComponent: function() {
		var pmIssueTypeStore = Ext.create('ExtApp.store.systemmanagement.PmIssueTypeStore');
		pmIssueTypeStore.load();
		this.items = [{
			xtype:'grid',
			title:'问题类型列表',
			layout:'fit',
			store: pmIssueTypeStore,
			columns:[{
				xtype: 'rownumberer'
			},{
				text:'标题',
				flex: 1,
				dataIndex:'title'
			},{
				text:'描述',
				flex: 1,
				dataIndex:'description'
			},{
				text:'创建时间',
				flex: 1,
				dataIndex:'createDate'
			},{
				xtype: 'actioncolumn',
		        width: 100,
		        sortable: false,
		        menuDisabled: true,
		        items: [{
		            iconCls: 'x-fa fa-trash',
		            handler: 'deleteRow'
		        },{
		            iconCls: 'x-fa fa-pencil-square-o',
		            handler: 'editIssueType'
		        }]	
			}],
			tbar: [{
	            text: '新建问题类型',
	            handler: 'newIssueType'
	        }],
			dockedItems: [{
				xtype: 'pagingtoolbar',
				dock: 'bottom',
				displayInfo: true,
				store: pmIssueTypeStore
			}]
		}];
		this.callParent(arguments);
	}
});
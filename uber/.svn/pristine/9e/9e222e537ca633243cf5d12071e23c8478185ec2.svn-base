Ext.define('ExtApp.view.qualityissuemanagement.issuesource.IssueSourceWindow',{
	xtype:'issueSourceWindow',
	extend:'Ext.window.Window',
	controller:'issueSource',
	width:500,
	height:400,
	// margin:'65 0 0 250',
	title:'问题来源',
	fbar: [
	       { type: 'button', text: '保存', handler: 'onButtonClickSubmit' },
	       { type: 'button', text: '关闭', handler: 'closeWindow' }
	     ],
	initComponent: function() {
		me = this;
    	me.items = [{
			xtype:'form',
			reference: 'issueSourceForm',
			layout:{
				type:'vbox',
				align:'stretch'
			},
			items:[{
		        xtype:'hiddenfield',
		        name: 'id'
			},{
				xtype:'textfield',
				name:'code',
				padding:'10 25 10 30',
				labelAlign:'top', 
				allowBlank:false, 
				fieldLabel:'问题来源编号'
			},{
				xtype:'textfield',
				name:'name',
				padding:'10 25 10 30',
				labelAlign:'top', 
				allowBlank:false, 
				fieldLabel:'问题来源名称'
			}]
		}];
    	me.callParent(arguments);
	}
});
/**
 * 项目管理-基本信息属性Controller
 */
Ext.define('ExtApp.view.projectmanagement.base.BaseInfoCommonController', {
    extend: 'Ext.app.ViewController',
    alias: 'controller.baseInfoCommon',
    
    // 初始化
    init: function() {
    	// 根据编辑权限控制画面
    	if (! this.view.editPrivilege ||
    			this.view.baselineId && this.view.baselineId != '' && this.view.baselineId != null) {
    		// 基本信息只读
    		Ext.each(this.view.getForm().getFields().items, function(field) {
				field.setReadOnly(true);
				field.fieldCls = 'text-readonly';
			});
    	}
    }
});

/**
 * 质量问题管理-待办任务-效果验证Controller
 */
Ext.define('ExtApp.view.qualityissuemanagement.qedashboard.step11.MyTaskInfo11Controller', {
    extend: 'ExtApp.view.common.IssueStepViewController',
    alias: 'controller.myTaskInfo11',

    target: null,

    //初期加载
    init: function() {
    	var me = this;
    	var form = this.lookupReference('refVerificationScheme06');
    	form.load({
            url:'/pdms/ims/my-task!getVerificationLineForm.action',
			params: {
				keyId: this.view.keyId,
	    		formKey: this.view.formKey,
	    		taskId: this.view.taskId,
	    		vid:me.view.record.get('vid')
			},
			//添加验证方案
            success: function(form,result,data) {
    			Ext.each(result.result.data, function (record) {
    				me.addPanel(record);
    			});
//    			form.owner.up('myTaskInfo06').getForm().findField('lineMgr06').setValue(result.result.data[0].lineMgr06);
//    			form.owner.up('myTaskInfo06').getForm().findField('lineMgrId06').setValue(result.result.data[0].lineMgrId06);
            }
        });
    },
    //加载验证方案
    addPanel: function (record) {
    	var refPanel = this.lookupReference('refVerificationScheme06');
		var feildlabelIndex = refPanel.items.length + 1;
		var seq = record.seq;
		// 只读标志
		var readOnlyFlg = false;

		if (this.view.formKey == "061" || this.view.editFlg == true) {
			readOnlyFlg = true;
		};
		var configItem=[{
			xtype: 'fieldset',
			title: '<B>验证方案 '+feildlabelIndex+'</B>',
			collapsible: true,
			scrollable: true,
			margin: 5,
			layout:{
				type:'vbox'
			},
			defaults: {
				layout: 'hbox',
				defaults: {
					margin: 5
				}
			},
			items:[{
				xtype:'container',
				items:[{
					xtype:'combo',
					fieldLabel:'验证方案 '+feildlabelIndex,
					readOnly:true,
					editable:false,
					bind:{
						store:'{verification}'
					},
					queryMode:'local',
					displayField:'name',
					valueField:'id',
					name:'verification',
					value:record.verification
				},{
					xtype : 'textareafield',
					fieldLabel : '通过要求',
					readOnly:true,
					width: 560,
					name:'passRequest',
					value:record.passRequest
				}]
			},{
				xtype: 'container',
				items: [{
					xtype:'textareafield',
					fieldLabel:'实施信息',
					width: 845,
					readOnly:true,
					name:'implementVehicle',
					value:record.implementVehicle
				},{
					xtype:'textfield',
					hidden:true,
					name:'uid',
					value:record.uid
				}]
			},{
				xtype:'container',
				items:[{
					xtype:'textfield',
					fieldLabel:'验证部门',
					readOnly:true,
					name:'deptName',
					value:record.deptName
				},{
					xtype : 'textfield',
					fieldLabel : '验证工程师',
					readOnly:true,
					name:'verificationEngineerName',
					value:record.verificationEngineerName
				}]
			},{
				xtype: 'container',
				items: [{
					xtype:'textareafield',
					itemId:'resultIndex' + feildlabelIndex,
					fieldLabel:'验证效果 &nbsp;<span style="color: red;">*</span>',
					width: 845,
					allowBlank:false,
					name:'verificationResult',
					value:record.verificationResult
				}]
			},{
				xtype: 'container',
				items: [{
					xtype:'imsFileAttachment',
					margin: '5 5 5 0',
					scrollable:'y',
					programId:null,
		    		sourceType:'SOURCE_TYPE_RESULT_ATTACHMENT',
		    		sourceId:record.uid,
		    		editable:true
				}]
			}]
		}];
		refPanel.add(configItem[0]);
    },
	// 点击【提交】
    saveInfo: function(btn) {
    	var me = this;
    	var v_form = me.view.getForm();
    	if(v_form.isValid() == false){
    		Ext.Msg.alert('提示', "请填写必填项！！！");
    		return;
    	}
    	v_form.submit({
    		url: '/pdms/ims/my-task-info06!saveMyTask.action',
    	    waitMsg : '正在提交数据',
    	    waitTitle : '提示',
    	    method : "POST",
    	    success : function(form, action) {  
    	    	var gridTask = me.getView().grid.getStore().load();
    	    	me.getView().close();
    	    },  
    	    failure : function(form, action) {
    	    	ExtApp.util.Util.handleFormFailure(action);
    	    }
    	});
    },
    // 点击【通过】
    Adopt: function(btn) {
    	var me = this;
    	var v_form = me.view.getForm();
    	
    	var gridNotify = this.view.down('qeNotify').down('grid');
    	var data = [];
    	var records = gridNotify.store.getModifiedRecords();
    	v_form.submit({
    		url: '/pdms/ims/my-task-info06!completeMyTask.action',
			params: {
				keyId: me.keyId,
				UId: me.UId,
				ProcessInstanceId: me.ProcessInstanceId,
				taskId: me.taskId,
				formKey: me.formKey
			},
    	    waitMsg : '正在提交数据',  
    	    waitTitle : '提示',  
    	    method : "POST",
    	    success : function(form, action) {  
    	        Ext.Msg.alert('提示', "操作失败：输入非法字符！！！");
    	    },  
    	    failure : function(form, action) {
    	    	Ext.Msg.alert("success");
    	    	if (records.length > 0) {
		    		for (var i = 0; i < records.length; i++) {
	    	    		data.push(records[i].data);
	    	    	}
	    	    	Ext.Ajax.request({
	    	    		url:'/pdms/ims/qe-notify!saveNotifyList.action',
	    	    		params: {
	    	    			editModel: Ext.encode(data),
	    	    			keyId: me.keyId
	    				},
	    				scope: gridNotify,
	    				failure: function(response, opts) {
	    			    	ExtApp.util.Util.handleRequestFailure(response);
	    			    }
	    	    	});
    	    	}
    	    	var gridTask = me.up('mytask').down('grid');
    	    	gridTask.getStore().load();
    	    	me.getView().close();
    	    }
    	});
    },
	// 点击【回退】
    fallback : function(btn) {
    	var me = this;
    	var v_form = me.view.getForm();

    	var vLineMgrName = v_form.findField('vLineMgrName');
    	vLineMgrName.allowBlank = true;
    	var vLineMgr = v_form.findField('vLineMgr');
    	vLineMgr.allowBlank = true;
    	
    	var refPanel = this.lookupReference('refVerificationScheme06');
    	for (var i = 1; i <= refPanel.items.length; i++){
        	var resultField = me.view.queryById('resultIndex' + i);
        	resultField.allowBlank = true;
    	}
    	
    	var returnReasonWindow = Ext.create('ExtApp.view.common.ReturnReasonWindow',{
			callback:function(returnComment){
        		if(returnComment == null || returnComment == ''){
        			Ext.Msg.alert('提示', '必须添加备注！');
        			return;
        		}
        		returnReasonWindow.close();
				me.getView().mask('正在提交... 请耐心等待...');
				v_form.submit({
		    		url: '/pdms/ims/my-task-info06!fallbackMyTask.action',
		            params: {
		            	returnComment:returnComment,
		            	action:'RETURN'
		            },
		    	    waitMsg : '正在提交数据',
		    	    waitTitle : '提示',
		    	    method : "POST",
		    	    success : function(form, action) {
		    	    	var gridTask = me.getView().grid.getStore().load();
		    	    	me.getView().close();
		    	    },
		    	    failure : function(form, action) {
		    	    	ExtApp.util.Util.handleFormFailure(action);
		    	    }
			    });
			}
		});
    	returnReasonWindow.show();
		return;
    },
    //审核&&批准
    selectMember: function(v) {
    	var me = this.view;
    	this.target = v.getTarget().name;
//    	this.dialog = me.add({
//			title:"请选择...",
//        	xtype: 'myTaskInfo04SelectWindow',
//        	Target: target,
//        	formKey: this.view.formKey
//        });
    	this.dialog = me.add({
    		xtype: 'sysUserDepartment',
    		parentCaller: this
    	});
        this.dialog.show();
    },
    // 添加用户/选择专业经理 - 确定
    confirmUser: function(userData) {
    	var me = this;
    	var v_form = me.view.getForm();
    	var Target = this.target;
    	//审核人
    	var vLineMgrName = v_form.findField('vLineMgrName');
    	//审核人ID
    	var vLineMgr = v_form.findField('vLineMgr');
    	
    	if(Target == "vLineMgrName"){
    		vLineMgrName.setValue(userData.name);
    		vLineMgr.setValue(userData.id);
		}
    }
});
Ext.define('ExtApp.view.common.ReturnReasonWindow',{
	xtype:'returnReasonWindow',
	extend:'Ext.window.Window',
	width:400,
	height:200,
	// margin:'65 0 0 250',
	title:'备注',
	scrollable:'y',
	callback:null,
	layout:{
		type:'vbox',
		align:'stretch'
	},
	items:[{
	    xtype:'form',
	    reference: 'returnReasonForm',
	    width: 200,
	    items: [{
			xtype:'textarea',
			name:'returnComment',
			padding:10,
			width:'90%',
			fieldLabel:'备注'
		}]
	}],
	initComponent: function() {
		me = this;
			
    	me.fbar = [
    				{ type:'button', text:'确定',
    					handler: function() {
    						var returnComment = me.down('form').getForm().findField('returnComment').getValue();
    						if (typeof me.callback == "function"){
    				            me.callback(returnComment);
    				        }
    					}
    				}
    		];
    	me.callParent(arguments);  		
	}
});
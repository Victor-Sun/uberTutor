Ext.define('ExtApp.view.workorder.common.WorkOrderImportController', {
    extend: 'Ext.app.ViewController',
    alias: 'controller.workOrderImport',
    uploadFile:function(){    	
    	var me = this;
        var form = this.lookupReference('workOrderImportForm');
        if (form.isValid()){
            me.getView().mask('正在上传... 请耐心等待！...');
            form.submit({
                clientValidation: true,
                scope: me,
                success: 'onUploadSuccess',
                failure: 'onSubmitFailure'
            });
        }
   },    
   onUploadSuccess: function(form, action) {
	   var view = this.getView();
       view.unmask();
       var form = this.lookupReference('workOrderImportForm');
       var grid = form.up('window').grid;
       grid.getStore().load();
       form.up('window').close();
   },
   onSubmitFailure: function(form, action) {
       this.getView().unmask();
       ExtApp.util.Util.handleFormFailure(action);
   },
   downloadTemplate:function(){
   	var me = this;
   	var projectId = me.getView().projectId;
   	document.location.href = '/pdms/workorder/workorder!downloadTemplate.action';
   }
});
/**
 * 质量问题管理-我的待办-问题发布Controller
 */
Ext.define('ExtApp.view.qualityissuemanagement.qedashboard.step1.MyTaskInfo01Controller', {
    extend: 'ExtApp.view.common.IssueStepViewController',
    alias: 'controller.myTaskInfo01',
    
    // 点击【提交】
    distribution : function(btn) {
    	var me = this;
    	var v_form = me.view.getForm();
    	if(v_form.isValid() == false){
    		Ext.Msg.alert('提示', "请填写必填项！！！");
    		return;
    	}
    	v_form.submit({
    		url: '/pdms/ims/ims-issue!save.action',
            params: {
            	model: Ext.encode(v_form.getFieldValues()),
            	method:'updateIssue',
            	action:'NEXT'
            },
    	    waitMsg : '正在提交数据',
    	    waitTitle : '提示',
    	    method : "POST",
    	    success : function(form, action) {
    	    	var gridTask = me.getView().grid.getStore().load();
    	    	me.getView().close();
    	    },
    	    failure : function(form, action) {
    	    	ExtApp.util.Util.handleFormFailure(action);
    	    }
	    });
    },
	// 点击【回退】
    fallback : function(btn) {
    	var me = this;
    	var v_form = me.view.getForm();
    	
    	var QeLevelField = v_form.findField('issueLevelCode');
    	QeLevelField.allowBlank = true;
    	var deptPmField = v_form.findField('fmName');
    	deptPmField.allowBlank = true;
    	var deptIdField = v_form.findField('deptId');
    	deptIdField.allowBlank = true;
    	
    	var returnReasonWindow = Ext.create('ExtApp.view.common.ReturnReasonWindow',{
			callback:function(returnComment){
        		if(returnComment == null || returnComment == ''){
        			Ext.Msg.alert('提示', '必须添加备注！');
        			return;
        		}
        		returnReasonWindow.close();
				me.getView().mask('正在提交... 请耐心等待...');
				v_form.submit({
		    		url: '/pdms/ims/ims-issue!save.action',
		            params: {
		            	returnComment:returnComment,
		            	method:'updateIssue',
		            	action:'RETURN'
		            },
		    	    waitMsg : '正在提交数据',
		    	    waitTitle : '提示',
		    	    method : "POST",
		    	    success : function(form, action) {
		    	    	var gridTask = me.getView().grid.getStore().load();
		    	    	me.getView().close();
		    	    },
		    	    failure : function(form, action) {
		    	    	ExtApp.util.Util.handleFormFailure(action);
		    	    }
			    });
			}
		});
		returnReasonWindow.show();
		return;
    },
	// 点击【合并】
    mergeIssue : function() {
    	var me = this;
    	var v_form = me.view.getForm();
    	var qeLevelField = v_form.findField('issueLevelCode');
    	var deptIdField = v_form.findField('deptId');
    	if(deptIdField.getValue() == null || deptIdField.getValue() == ''){
    		Ext.Msg.alert('提示', '请填写责任部门!');
    		return;
    	}
    	if(qeLevelField.getValue() == null || qeLevelField.getValue() == ''){
    		Ext.Msg.alert('提示', '请填写问题等级!');
    		return;
    	}
    	var deptPmField = v_form.findField('fmName');
    	deptPmField.allowBlank = true;
    	
    	v_form.submit({
    		url: '/pdms/ims/ims-issue!save.action',
            params: {
            	model: Ext.encode(v_form.getFieldValues()),
            	method:'updateIssue',
            	action:'SAVE'
            },
    	    waitMsg : '正在提交数据',
    	    waitTitle : '提示',
    	    method : "POST",
    	    success : function(form, action) {
    	    	var window = Ext.create('Ext.window.Window',{title:'合并问题',window:me.getView(),layout:'border',width:'100%',height:'100%'});
    	    	var mergeIssue = Ext.create('ExtApp.view.qualityissuemanagement.qedashboard.merge.MergeIssue',{issueId:me.getView().issueId,programId:me.getView().record.get('programId'),closeable:true});
    	    	window.add(mergeIssue);
    	    	window.show();
    	    },
    	    failure : function(form, action) {
    	    	ExtApp.util.Util.handleFormFailure(action);
    	    }
	    });
    	
    },
    //选择专业经理
    selectMember: function() {
    	var me = this.view;
    	this.dialog = me.add({
    		xtype: 'sysUserDepartment',
    		parentCaller: this
    	});
        this.dialog.show();
    },
    // 添加用户/选择专业经理 - 确定
    confirmUser: function(userData) {
    	var me = this;
    	var v_form = me.view.getForm();
    	//专业经理
    	var deptPm = v_form.findField('fmName');
    	//专业经理ID
    	var deptPmId = v_form.findField('fm');
    	
		deptPm.setValue(userData.name);
		deptPmId.setValue(userData.id);
    },
    
    // 关闭问题
    closeWindow: function() {
    	this.view.destroy();
    },
    cancelMergeIssue:function(){
    	var me = this;
    	var v_form = me.view.getForm();
    	
    	var issueLevelCode = v_form.findField('issueLevelCode');
    	issueLevelCode.allowBlank = true;
    	var deptPmField = v_form.findField('fmName');
    	deptPmField.allowBlank = true;
    	var deptIdField = v_form.findField('deptId');
    	deptIdField.allowBlank = true;
    	v_form.submit({
    		url: '/pdms/ims/ims-issue!cancelMergeIssue.action',
            params: {
            	issueId:me.getView().issueId
            },
    	    waitMsg : '正在提交数据',
    	    waitTitle : '提示',
    	    method : "POST",
    	    success : function(form, action) {
    	    	var gridTask = me.getView().grid.getStore().load();
    	    	me.getView().close();
    	    },
    	    failure : function(form, action) {
    	    	ExtApp.util.Util.handleFormFailure(action);
    	    }
	    });
    }
});
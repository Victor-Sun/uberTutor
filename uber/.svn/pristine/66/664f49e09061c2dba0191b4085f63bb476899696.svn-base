Ext.define('ExtApp.view.projectManagement.issue.ProjectOpenIssuePieChart',{
	xtype:'projectOpenIssuePieChart',
	extend:'Ext.Panel',
	controller: 'projectOpenIssuePieChart',
	title:'项目问题解决情况分布',
	width: 650,
	initComponent: function() {
		var me = this;
		var colors = [];
		colors.push('red');
		colors.push('yellow');
		colors.push('white');
		colors.push('green');
		var projectOpenIssuePieStore = Ext.create('ExtApp.store.projectmanagement.issue.ProjectOpenIssuePieStore');
		projectOpenIssuePieStore.load({params:{programId: me.programId}});
		me.items = [{
	        xtype: 'polar',
	        reference: 'chart',
//	        theme: 'default-gradients',
	        width: '100%',
	        height: 500,
	        insetPadding: 50,
	        innerPadding: 20,
	        store: projectOpenIssuePieStore,
	        legend: {
	            docked: 'bottom'
	        },
	        interactions: ['rotate'],
	        series: [{
	            type: 'pie',
	            angleField: 'data1',
	            colors:colors,
	            label: {
	                field: 'status',
	                calloutLine: {
	                    length: 60,
	                    width: 3
	                    // specifying 'color' is also possible here
	                }
	            },
	            highlight: true,
	            tooltip: {
	                trackMouse: true,
	                renderer: 'onSeriesTooltipRender'
	            }
	        }]
	    }];
		me.callParent(arguments);
	}
});
/**
 * 项目管理-项目模板库-主计划(质量阀)
 */
Ext.define('ExtApp.view.projectmanagement.templatelibrary.ProjectTemplateGateNode',{
	extend:'Ext.form.Panel',
	xtype:'projectTemplateGateNode',

	controller: 'projectTemplateGateNode',
	viewModel: 'projectTemplateGateNode',
	
	layout: {
		type: 'vbox',
		align: 'stretch'
	},
	
	initComponent: function() {
		
		var gateNodeStore = Ext.create(
			'ExtApp.store.projectmanagement.ProjectTemplateGateNodeStore');
		gateNodeStore.getProxy().extraParams = {programId: this.programId};
		gateNodeStore.load();
	
		this.items = [{
			flex: 1,
			margin: 10,
			xtype:'fieldset',
			layout: 'fit',
	    	title: '质量阀信息',
	    	collapsible:true,
	    	items:[{
	    		xtype: 'grid',
	    		store: gateNodeStore,
				columns:[{
					xtype: 'rownumberer'
				},{
					text:'阀门名称',
					flex: 1,
					dataIndex:'taskName'
				},{
					text:'完成周期(天)',
					flex: 1,
					dataIndex:'finishDaysToSop'
				}],
				dockedItems: [{
		            xtype: 'pagingtoolbar',
		            dock: 'bottom',
		            displayInfo: true,
		            store: gateNodeStore
		        }],
				listeners:{
		        	celldblclick: 'onCelldblclick'
				}
	    	}]
		},{
			flex: 1,
			xtype: 'panel',
			layout: 'fit',
			reference:'refGateDeliverable'
		}];
		this.callParent(arguments);
	}
});
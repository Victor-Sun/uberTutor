/**
 * 试验类型维护
 */
Ext.define('ExtApp.view.qualityissuemanagement.testtype.TestType',{
	extend:'Ext.panel.Panel',
	xtype:'testType',
	controller: 'testType',
	layout:'fit',
	margin:10,
	initComponent: function() {
		var testTypeStore = Ext.create('ExtApp.store.qualityissuemanagement.TestTypeStore');
		testTypeStore.load();
		this.items = [{
			xtype:'grid',
			title:'试验类型列表',
			layout:'fit',
			store: testTypeStore,
			columns:[{
				xtype: 'rownumberer'
			},{
				text:'试验类型编码',
				flex: 1,
				dataIndex:'code'
			},{
				text:'试验类型名称',
				flex: 1,
				dataIndex:'name'
			},{
				xtype: 'actioncolumn',
		        width: 30,
		        sortable: false,
		        menuDisabled: true,
		        items: [{
		            iconCls: 'cell-editing-delete-row',
		            handler: 'deleteRow'
		        }]	
			}],
			tbar: [{
	            text: '新建试验类型',
	            handler: 'newTestType'
	        }],
			dockedItems: [{
				xtype: 'pagingtoolbar',
				dock: 'bottom',
				displayInfo: true,
				store: testTypeStore
			}]
		}];
		this.callParent(arguments);
	}
});
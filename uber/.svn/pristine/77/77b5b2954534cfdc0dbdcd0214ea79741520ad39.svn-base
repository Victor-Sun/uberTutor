.milestone-wrap {
    width: 22px !important;
    height: 22px !important;
    border: none;
    overflow: visible;
    background: transparent;
}

.milestone-triangle {
  position: absolute;
  width: 0 !important;
  height: 0 !important;
  border-style: solid;
  border-width: 10px 10px 0 10px;
  background: transparent !important;
  border-top-color: orange;
  border-right-color: transparent;
  border-bottom-color: transparent;
  border-left-color: transparent;
  left: -10px;
  top: 20px;
}

.timelinepanel {

  .sch-event-milestone.sch-event-selected {
    box-shadow: none;
  }

  .sch-event-milestone .task {

    @extend .milestone-wrap;

    .task-inner {
      @extend .milestone-triangle;

      //textlabel positions
      .top {
        top: -30px;
      }

      .bottom {
        top: 0px;
      }

      .right {
        top: -15px;
        left: 15px;
      }

      .left {
        position: relative !important;
        top: -15px;
        float: right;
        left: -15px;
      }

      .task-inner-body {
        color: black;
        position: absolute;
      }
    }
  }
}
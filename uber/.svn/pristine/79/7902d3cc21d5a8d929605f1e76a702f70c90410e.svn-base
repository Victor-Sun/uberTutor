/**
 * 个人空间-代办任务-任务延期变更
 */
Ext.define('ExtApp.view.myworkspace.task.PmTaskExtension',{
	extend:'Ext.window.Window',
	xtype:'pmTaskExtension',

	controller: 'pmTaskExtension',
	
	width:500,
	height:300,
	closable: false,
	modal: true,
	title: '任务延期变更',
	
	initComponent: function() {
		this.items = [{
			xtype: 'form',
			margin: 10,
			layout: {
				type: 'vbox',
				align: 'stretch'
			},
			items: [{
				xtype: 'panel',
				layout: 'column',
				defaults: {
					columnWidth:1,
					labelWidth: 150,
					margin: 5
				},
				items: [{
					xtype:'datefield',
					fieldLabel: '当前计划截止日期',
					value: this.plannedFinishDate,
					format: 'Y/m/d',
					readOnly: true,
					fieldCls: 'text-readonly'
				},{
					xtype:'numberfield',
					fieldLabel:'延期天数',
					name: 'delayDays',
					allowBlank: false,
					maxValue: 999999
				},{
					fieldLabel:'备注',
					xtype: 'textarea',
					name: 'memo',
					maxLength: 1000
				},{
					xtype: 'filefield',
					fieldLabel:'审批证据',
			        name: 'upload',
			        msgTarget: 'side',
			        allowBlank: false,
			        columnWidth:1,
			        buttonText: '浏览'
				}]
			}]
        }];
		this.tools = [{
			text:'确定',
			xtype: 'button',
			iconCls: 'x-fa fa-circle-o',
			handler: 'confirm'
		},{
			text:'关闭',
	    	xtype: 'button',
	    	iconCls: 'x-fa fa-close',
	    	handler: 'closeWindow'
		}];
		this.callParent(arguments);
	}
});
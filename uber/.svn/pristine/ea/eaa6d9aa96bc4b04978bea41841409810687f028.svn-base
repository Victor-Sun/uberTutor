Ext.define('ExtApp.view.projectManagement.dept.DeptGanttHeader', {
    extend   : 'Ext.panel.Header',
    xtype    : 'deptGanttHeader',

    mixins   : ['Gnt.mixin.Localizable'],
    requires : [
        'Ext.form.field.ComboBox'
    ],
    //split  : true,
    border   : '0 0 1 0',
    defaults:{
    	xtype:'button'
//		cls: 'gant-icon'
    },
    
    initComponent : function () {
        this.tools = [
            {
                tooltip   : 'collapseAll',
                reference : 'collapseAll',
                iconCls   : 'x-fa fa-angle-double-up',
//                cls       : 'icon-collapse-all',
                bind      : {
                    disabled : '{filterSet}'
                }
            },
            {
                tooltip   : 'expandAll',
                reference : 'expandAll',
//                cls       : 'icon-expand-all',
                iconCls   : 'x-fa fa-angle-double-down',
                bind      : {
                    disabled : '{filterSet}'
                }
            },
            {
                tooltip   : 'zoomOut',
                iconCls   : 'x-fa fa-search-minus',
                reference : 'zoomOut'
//                cls       : 'icon-zoom-out'
            },
            {
                tooltip   : 'zoomIn',
                iconCls   : 'x-fa fa-search-plus',
                reference : 'zoomIn'
//                cls       : 'icon-zoom-in'
            },
            {
                tooltip   : 'zoomToFit',
                reference : 'zoomToFit',
                iconCls   : 'x-fa fa-arrows-alt'
//                cls       : 'icon-zoom-to-fit'
            },
            {
                tooltip   : 'viewFullScreen',
                reference : 'viewFullScreen',
                iconCls   : 'x-fa fa-desktop',
//                cls       : 'icon-fullscreen',
                bind      : {
                    hidden : '{!fullscreenEnabled}'
                }
            },
            {
                tooltip   : 'highlightCriticalPath',
                reference : 'criticalPath',
                iconCls   : 'x-fa fa-fire'
//                cls       : 'icon-critical-path'
            }
        ];

        Ext.Array.forEach(this.tools, function (cmp) {
            if (cmp.reference) cmp.itemId = cmp.reference;
        });

        this.callParent(arguments);
    }
});

/**
 * 项目管理-项目模板库(添加模板)View
 */
Ext.define('ExtApp.view.projectmanagement.templatelibrary.ProjectTemplateAdd',{
	extend:'Ext.window.Window',
	xtype:'projectTemplateAdd',

	controller: 'projectTemplateAdd',

	modal: true,
	scrollable: 'y',

	initComponent: function() {

		this.items = [{
			xtype:'form',
			reference: 'refprojectTemplateAdd',
			items:[{
				margin:'10 20 10 20',
				xtype: 'textfield',
				fieldLabel: '项目编号',
				name: 'number',
				width: 350
			},{
				margin:'10 20 10 20',
				xtype: 'textfield',
				fieldLabel: '名称',
				name: 'name',
				width: 350
			},{
				margin:'10 20 10 20',
				xtype: 'radiogroup',
		    	fieldLabel: '是否默认(必须有一个项目为默认)',
		    	labelWidth: 250,
		    	items:[{
					inputValue: '0',
					checked:true,
					name: 'rb',
                    boxLabel: '是'
                }, {
                    inputValue: '1',
                    name: 'rb',
                    boxLabel: '否'
                }]
			}]
				
		}];
		this.dockedItems = [{
            xtype: 'toolbar',
            dock: 'bottom',
            margin: 10,
            items:[{
            	text:'保存',
            	handler: 'save'
            },{
            	text:'取消',
            	handler: 'cancel'
            }]
		}];
		this.callParent(arguments);
	}
});
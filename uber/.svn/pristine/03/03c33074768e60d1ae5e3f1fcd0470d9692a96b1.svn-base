/**
 * 首页-个人设置-常用项目View
 */
Ext.define('ExtApp.view.toolbarsettings.ProgramUsual',{
	extend:'Ext.panel.Panel',
	xtype:'programUsual',

	controller: 'programUsual',
	layout: 'fit',

	initComponent: function() {

		var settingsStore = Ext.create(
			'ExtApp.store.toolbarsettings.PersonalSettingsStore');
		settingsStore.load();

		this.items = [{
			xtype:'grid',
			store: settingsStore,
			columns:[{
				xtype: 'rownumberer'
			},{
				text:'项目代码',
				dataIndex:'code',
				flex: 1
			},{
				text:'项目名',
				dataIndex:'programName',
				flex: 1
			},{
				text:'项目经理',
				dataIndex:'pmName',
				flex: 1
			},{
				xtype: 'checkcolumn',
				text: '常用项目',
				flex: 1,
				dataIndex: 'commonProject'
			}],
			selModel: {
                type: 'rowmodel'
            }
		}];
		this.tbar = ['->',{
			text:'保存',
			iconCls: 'x-fa fa-save',
	        handler: 'save'
		}];
		this.callParent(arguments);
	}
});
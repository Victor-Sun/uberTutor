/**
 * 质量问题数据字典维护
 */
Ext.define('ExtApp.view.qualityissuemanagement.imscode.ImsCode',{
	extend:'Ext.panel.Panel',
	xtype:'imsCode',
	controller: 'imsCode',
	layout:'fit',
	margin:10,
	initComponent: function() {
		var imsCodeStore = Ext.create('ExtApp.store.qualityissuemanagement.ImsCodeStore');
		imsCodeStore.load();
		this.items = [{
			xtype:'grid',
			title:'试验类型列表',
			layout:'fit',
			store: imsCodeStore,
			columns:[{
				xtype: 'rownumberer'
			},{
				text:'试验类型编码',
				flex: 1,
				dataIndex:'code'
			},{
				text:'试验类型名称',
				flex: 1,
				dataIndex:'name'
			},{
				xtype: 'actioncolumn',
		        width: 30,
		        sortable: false,
		        menuDisabled: true,
		        items: [{
		            iconCls: 'x-fa fa-trash',
		            handler: 'deleteRow'
		        }]	
			}],
			tbar: [{
	            text: '新建',
	            handler: 'newTestType'
	        }],
			dockedItems: [{
				xtype: 'pagingtoolbar',
				dock: 'bottom',
				displayInfo: true,
				store: imsCodeStore
			}]
		}];
		this.callParent(arguments);
	}
});
Ext.define('ExtApp.view.forum.IssueComment',{
	extend: 'Ext.container.Container',
	xtype: 'issueComment',

	cls: 'userProfile-container',
	layout: {
		type: 'hbox',
		align: 'stretch'
	},
	defaults: {
		cls: 'shadow',
		flex: 1,
		scrollable: 'y'
	},

	initComponent:function() {
		var me = this;
		this.items = [{
			xtype: 'forumgrid',
			flex: 1,
			scrollable: 'y',
			sourceId:me.sourceId,
			source:me.source
		}];
		this.callParent();
	}
});
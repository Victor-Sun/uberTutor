/**
 * 部门空间-文档管理
 */
Ext.define('ExtApp.view.deptworkspace.document.DeptDocument',{
	extend:'Ext.panel.Panel',
	xtype:'deptDocument',

	layout: 'fit',
	
	margin: 20,
	cls: 'shadow',
	
	title: '部门文件夹',
	
	controller:'deptDocument',
	
	initComponent: function() {
		var me = this;
		var dtStore = Ext.create('ExtApp.store.deptworkspace.DeptDocumentTreeStore');
		dtStore.load();
	
		this.items = [{
			xtype:'panel',
			margin: 10,
			layout:{
				type:'hbox',
				align:'stretch'
			},
			items:[{
				xtype:'panel',
				flex:1,
				margin: '0 5 0 0',
				cls:'shadow',
				layout:{
					type: 'fit'
				},
				items:[{
					xtype:'treepanel',
					scrollable:'y',
					rootVisible: false,
                    store:dtStore,
					listeners:{
						itemclick: 'onItemclick',
						itemcontextmenu: 'onItemcontextmenu',
						beforeitemexpand: function(record, eOpts) {
							dtStore.getProxy().extraParams.departmentId =
								record.get('departmentId');
					    }
					}
				}]
			},{
				xtype:'panel',
				margin: '0 0 0 5',
				cls:'shadow',
				flex:3,
				reference: 'mainCardPanel',
				layout: {
					type: 'card'
				}
			}]
		}];
		this.callParent(arguments);
	}
});
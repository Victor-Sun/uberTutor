Ext.define('ExtApp.view.projectmanagement.extplan.ext301.BatchProcessScheduleWindow',{
	extend: 'Ext.window.Window',
	xtype: 'batchProcessScheduleWindow',
	width: 300,
	height: 300,
	title:'批量设置',
	controller: 'partsPool',
	dockedItems: [{
		xtype: 'toolbar',
		dock: 'bottom',
		items: ['->',{
			xtype: 'button',
			text: '确定',
			handler:'batchProcessSchedule'
		},{
			xtype: 'button',
			text: '取消',
			handler: function() {
				this.up('window').close();
			}
		}]
	}],
	initComponent: function() {
		var me = this;
		var partNodeStore = Ext.create('ExtApp.store.projectmanagement.extplan.ext301.PartNodeStore');
		partNodeStore.load({params:{programVehicleId:me.programVehicleId}});
		
		me.items = [{
			xtype:'form',
			layout:{
				type:'vbox',
				align:'stretch'
			},
			defaults: {
				labelAlign: 'top',
		    	padding:'10 25 10 30',
		    	labelWidth: 130
			},
			items:[{
				xtype:'hiddenfield', 
		        name: 'programVehicleId',
		        value:me.programVehicleId
			},{
				xtype:'combo',
				fieldLabel:'节点 ',
				editable: false,
				store: partNodeStore,
				queryMode:'local',
				displayField:'name',
				valueField:'id',
				allowBlank:false,
				name:'code'
			},{
				xtype: 'datefield',
				name:'plannedFinishDate',
				format:'Y/m/d',
				fieldLabel: '日期'
			}]
		}],
		this.callParent();
	}
	
});
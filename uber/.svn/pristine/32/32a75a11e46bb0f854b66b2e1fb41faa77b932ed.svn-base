/**
 * 首页-个人设置-我的工作组（成员列表）
 */
Ext.define('ExtApp.view.toolbarsettings.MyWorkGroupMember',{
	extend:'Ext.panel.Panel',
	xtype:'myWorkGroupMember',

	controller: 'myWorkGroupMember',
	layout: 'fit',

	initComponent: function() {
		// 工作组成员列表
		var memberStore = Ext.create('ExtApp.store.toolbarsettings.MyWorkGroupMemberStore');
		memberStore.getProxy().extraParams = {workGroupId: this.workGroupId};
		memberStore.load();
		
		this.items = [{
			xtype:'panel',
			title: '成员列表',
			layout: 'fit',
			items: [{
				xtype: 'grid',
				store: memberStore,
				selType: 'checkboxmodel',
				columns: [{
					text: '成员姓名',
		  			flex: 1,
		  			dataIndex: 'userName'
				}],
				dockedItems: [{
					xtype: 'toolbar',
					dock: 'top',
					items: [{
						xtype: 'button',
						text: '添加成员',
						handler: 'onAddMember'
					},{
						xtype: 'button',
						text: '删除成员',
						handler: 'onDelMember'
					}]
				}]
			}]
		}];
		this.callParent(arguments);
	}
});
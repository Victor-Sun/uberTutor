/**
 * 项目管理-计划-主计划-阶段Controller
 */
Ext.define('ExtApp.view.projectmanagement.stage.ProjectPlanStageController', {
    extend: 'Ext.app.ViewController',
    alias: 'controller.projectPlanStage',
    
    // 添加阶段
    addStage: function(btnObj) {
    	var gridStore = btnObj.up('grid').getStore();
    	var model = Ext.create(
    			'ExtApp.model.projectmanagement.ProjectPlanStageModel');
    	gridStore.insert(0, model);
    },
    
    // 删除阶段
    deleteStage: function(grid, rowIndex) {
    	grid.getStore().removeAt(rowIndex);
    }

});
/**
 * 项目管理-导出模板
 */
Ext.define('ExtApp.view.projectmanagement.deploy.ExportPlanController', {
    extend: 'Ext.app.ViewController',
    alias: 'controller.exportPlan',

    // 确定
    confirmExport: function(btn) {
    	var me = this;
        var form = this.view.down('form').getForm();
        if (form.isValid()){
        	me.view.mask('Please Waiting...');
            form.submit({
                clientValidation: true,
                url: '/pdms/pm/project-plan!exportProjectTemplate.action',
                params: {
                	programVehicleId: me.view.programVehicleId,
                	model: Ext.encode(form.getFieldValues())
                },
                scope: me,
                success: function(form, action) {
                	me.view.unmask();
                	me.closeWindow();
                	ExtApp.util.Util.showToast("项目模板导出成功！");
                },
                failure: function(form, action) {
                	me.view.unmask();
                	ExtApp.util.Util.handleFormFailure(action);
                }
            });
        }
    },

    // 取消
    closeWindow: function() {
    	this.view.close();
    }
});

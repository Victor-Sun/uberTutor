/**
 * 项目管理-主节点-SOP节点编辑
 */
Ext.define('ExtApp.view.projectmanagement.mainnode.EditSOPController', {
    extend: 'ExtApp.view.common.BaseViewController',
    alias: 'controller.editSOP',
    
    // 初始化
    init: function() {
    	var me = this;
    	this.view.down('form').load({
    		params: {
    			programVehicleId: me.view.programVehicleId
    		}
    	});
    },
    
    // 确定
    confirm: function() {
    	var me = this;
        var form = this.view.down('form').getForm();
        if (form.isValid()){
        	me.view.mask('Please Waiting...');
            form.submit({
                clientValidation: true,
                url: '/pdms/pm/project-plan-major-node!updateSOP.action',
                params: {
                	programVehicleId: me.view.programVehicleId,
                	model: Ext.encode(form.getFieldValues())
                },
                scope: me,
                success: function(form, action) {
                	me.view.unmask();
                	ExtApp.util.Util.showToast("更改成功！");
                	me.view.parentCaller.refreshView();
                	me.cancel();
                },
                failure: function(form, action) {
                	me.view.unmask();
                	ExtApp.util.Util.handleFormFailure(action);
                }
            });
        }
    },
    
    // 取消
    cancel: function() {
    	this.view.close();
    }

});
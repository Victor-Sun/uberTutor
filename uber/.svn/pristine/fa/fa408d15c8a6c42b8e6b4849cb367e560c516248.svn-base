	xtype:'editSOP',
	
	controller: 'editSOP',

	modal: true,
	closable: false,
	
	layout:{
		type:'fit'
	},
	
	width: 400,
	height: 200,
	
	title: '编辑SOP',
	
	initComponent: function() {
		var me = this;

		this.items = [{
			xtype:'form',
			url: '/pdms/pm/project-plan-major-node!getProjectPlanSOP.action',
			margin:10,
			layout:{
				type:'vbox',
	      		align:'stretch'
	      	},
	      	items: [{
				xtype: 'panel',
				layout:{
					type:'vbox',
					align:'stretch'
				},
				defaults: {
					flex: 1,
					labelWidth: 150
				},
				items: [{
					xtype: 'textfield',
					fieldLabel: '名称',
					name: 'taskName',
					allowBlank:false,
					maxLength:200
				},{
					xtype: 'datefield',
					fieldLabel: 'SOP时间',
					format: 'Y/m/d',

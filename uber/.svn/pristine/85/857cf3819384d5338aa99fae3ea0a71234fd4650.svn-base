/**
 * 项目管理-项目模板库-主计划(泳道)
 */
Ext.define('ExtApp.view.projectmanagement.templatelibrary.ProjectTemplateSwimLane',{
	extend:'Ext.form.Panel',
	xtype:'projectTemplateSwimLane',

	controller: 'projectTemplateSwimLane',
//	viewModel: 'projectTemplateSwimLane',
	
	layout: {
		type: 'vbox',
		align: 'stretch'
	},
	
	initComponent: function() {
		
		var swimLaneStore = Ext.create(
			'ExtApp.store.projectmanagement.ProjectTemplateSwimLaneStore');
		swimLaneStore.getProxy().extraParams = {programId: this.programId, grade: this.grade};
		swimLaneStore.load();
	
		this.items = [{
			flex: 1,
			margin: 10,
			xtype:'fieldset',
			layout: 'fit',
	    	title: '泳道',
	    	collapsible:true,
	    	items:[{
	    		xtype: 'grid',
	    		store: swimLaneStore,
				columns:[{
					xtype: 'rownumberer'
				},{
					text: '泳道名称',
					dataIndex: 'displayName',
					flex: 1
				},{
					text: '关联组织',
					flex: 1,
					dataIndex: 'childObsName'
				},{
					text: '显示顺序',
					dataIndex: 'seqNo',
					flex: 1
				}],
				dockedItems: [{
		            xtype: 'pagingtoolbar',
		            dock: 'bottom',
		            displayInfo: true,
		            store: swimLaneStore
		        }],
				listeners:{
		        	celldblclick: 'onCelldblclick'
				}
	    	}]
		},{
			flex: 1,
			xtype: 'panel',
			layout: 'fit',
			reference:'refSwimLaneDeliverable'
		}];
		this.callParent(arguments);
	}
});
/**
 * 项目管理-创建基线
 */
Ext.define('ExtApp.view.projectManagement.baseline.CreateBaseline',{
	extend:'Ext.window.Window',
	xtype:'createBaseline',

	controller: 'createBaseline',
	
	width:400,
	height:200,
	modal: true,
	closable: false,
	title: '另存为版本',
	
	initComponent: function() {
		this.items = [{
			xtype: 'form',
			margin: 10,
			layout: {
				type: 'vbox',
				align: 'stretch'
			},
		    items: [{
				xtype: 'textfield',
				fieldLabel: '标题',
				flex: 1,
				name: 'title',
				allowBlank:false,
				maxLength:200
		    },{
		    	xtype: 'textarea',
		    	fieldLabel: '备注',
				flex: 1,
				name: 'note',
				maxLength:20000
		    }]
        }];
		this.tools = [{
			text:'创建',
			xtype: 'button',
			iconCls: 'x-fa fa-circle-o',
			handler: 'confirmCreateBaseline'
		},{
			text:'关闭',
			xtype: 'button',
			iconCls: 'x-fa fa-close',
			handler: 'cancelCreateBaseline'
		}];
		this.callParent(arguments);
	}
});
/**
 * 项目管理-车型项目-质量问题趋势图
 */
Ext.define('ExtApp.view.projectmanagement.vehicle.OpenIssueTrendChartController', {
	extend: 'ExtApp.view.common.BaseViewController',
    alias: 'controller.openIssueTrendChart',
    
    // onBarTipRender
    onBarTipRender: function (tooltip, record, item) {
        var fieldIndex = Ext.Array.indexOf(item.series.getYField(), item.field),
            browser = item.series.getTitle()[fieldIndex];

        tooltip.setHtml(browser + ' on ' +
            record.get('month') + ': ' +
            record.get(item.field).toFixed(1) + '%');
    },
    
    // onLineTooltipRender
    onLineTooltipRender: function (tooltip, record, item) {
        tooltip.setHtml(record.get('month') + ': ' + record.get('data3') + '%');
    }
});
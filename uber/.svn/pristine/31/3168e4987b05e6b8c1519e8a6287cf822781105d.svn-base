/**
 * 时程表泳道设定-添加泳道
 */
Ext.define('ExtApp.view.projectmanagement.timeline.setting.AddLane',{
	extend:'Ext.window.Window',
	xtype:'addLane',
	
	controller: 'addLane',
	
	modal: true,
	closable: false,
	
	layout:{
		type:'fit'
	},
	
	width: 350,
	height: 200,
	
	title: '添加泳道',
	
	initComponent: function() {
		var me = this;
		
		this.items = [{
			xtype:'form',
			reference: 'refAddLaneForm',
			margin:10,
			layout:{
				type:'vbox',
	      		align:'stretch'
	      	},
	      	items: [{
				xtype: 'panel',
				layout:{
					type:'vbox',
					align:'stretch'
				},
				items: [{
					xtype: 'textfield',
					name: 'displayName',
					flex: 1,
					fieldLabel: '泳道名称',
					allowBlank: false,
	                maxLength: 50
				},{
					xtype: 'numberfield',
					name: 'seqNo',
					flex: 1,
					fieldLabel: '显示顺序',
					minValue: 1,
	                maxValue: 99999
				},{
					xtype: 'panel',
					margin: '0 0 5 0',
					flex: 1,
					layout:{
						type:'hbox',
						align:'stretch'
					},
					items: [{
						xtype: 'textfield',
						name: 'childObsName',
						flex: 1,
						fieldLabel: '关联组织',
						allowBlank:false,
						readOnly: true,
						fieldCls: 'text-readonly'
					},{
				        xtype: 'hiddenfield',
				        name: 'childObsId'
					},{
						xtype: 'button',
						text:'选择',
						handler: 'onSelObs'
					}]
				}]
			}]
		}];
		this.tools = [{
			text:'确定',
			xtype: 'button',
			iconCls: 'x-fa fa-circle-o',
			handler: 'confirm'
		},{
			text:'取消',
			xtype: 'button',
			iconCls: 'x-fa fa-close',
			handler: 'cancel'
		}];
		this.callParent(arguments);
	}
});
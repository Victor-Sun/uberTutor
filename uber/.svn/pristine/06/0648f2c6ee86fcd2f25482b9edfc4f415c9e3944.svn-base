/**
 * 首页-节点完成状况
 */
Ext.define('ExtApp.view.dashboard.NodeSeriesChart',{
	extend:'Ext.panel.Panel',
	xtype:'nodeSeriesChart',
	
	controller: 'nodeseries',
	
	flex:1,
	layout:'fit',
	
	initComponent: function() {
		this.items = [{
			xtype: 'cartesian',
	        width: '100%',
	        height: 500,
	        store:{type:'nodeseries'},
	    	axes:[{
	    		type:'numeric',
	    		position:'left',
	    		adjustByMajorUnit:true,
	    		fields:['PlannedRatio', 'ActualRatio'],
	    		minimum:0,
	    		renderer:'onAxisLabelRender'
	    	},{
	    		type:'category',
	    		position:'bottom',
	    		fields:'process'
	    	}],
	    	series:{
	    		type:'bar',
	    		xField:'process',
	    		yField:['PlannedRatio','ActualRatio'],
	    		title:['计划完成', '实际完成'],
	    		colors:['blue', 'orange'],
	    		stacked:false,
	    		highlight: {
	                fillStyle: 'yellow'
	            },
	            tooltip: {
	    			trackMouse: true,
	    			renderer: 'onSeriesTooltipRender'
	    		}
	    	},
	    	legend:{
	    		docked:'bottom'
	    	}
		}];
		this.callParent(arguments);
	}
});
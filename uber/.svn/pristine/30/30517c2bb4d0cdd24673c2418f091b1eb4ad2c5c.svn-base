/**
 * 项目管理-时程表泳道编辑
 */
Ext.define('ExtApp.view.projectmanagement.timeline.ProjectTimeLineResource', {
	extend:'Ext.window.Window',
	xtype:'projectTimeLineResource',

	controller:'projectTimeLineResource',

	width:400,
	height:200,
	closable: false,
	modal: true,

	initComponent: function() {
		
		this.items = [{
			xtype: 'form',
			layout: 'column',
		    margin:10,
		    defaults: {
		    	columnWidth:1,
		    	margin:2
		    },
		    items: [{
				xtype: 'textfield',
				fieldLabel: '泳道名称',
				name: 'displayName',
				value: this.model.get('Name'),
				allowBlank: false,
                maxLength: 50
			},{
				xtype: 'numberfield',
				fieldLabel: '显示顺序',
				name: 'seqNo',
				value: this.model.get('SeqNo'),
				minValue: 1,
                maxValue: 99999
			},{
				xtype: 'hiddenfield',
				name: 'functionId',
				value: this.model.get('Id')
			}]
		}];
		
		this.tools = [{
			text:'保存',
	        xtype: 'button',
	        iconCls: 'x-fa fa-save',
	        handler: 'saveResource'
		},{
			text:'关闭',
	        xtype: 'button',
	        iconCls: 'x-fa fa-close',
	        handler: 'closeWindow'
		}];
		
		this.callParent();
	}
});

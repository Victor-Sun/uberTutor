/**
 * 项目管理-发布计划(文件发布)
 */
Ext.define('ExtApp.view.projectManagement.deploy.DeployPlanAttachment',{
	extend:'Ext.window.Window',
	xtype:'deployPlanAttachment',

	controller: 'deployPlanAttachment',
	
	width:600,
	height:300,
	closable: false,
	title: '发布证据',
	
	initComponent: function() {
		this.items = [{
			xtype: 'form',
//			margin: 10,
			layout: {
				type: 'vbox',
				align: 'stretch'
			},
		    items: [{
		    	xtype: 'fileAttachment',
		    	margin: 0,
				programId: this.programId,
	    		sourceType: 'SOURCE_TYPE_PLAN_EVIDENCE',
	    		sourceId: this.programVehicleId
		    }]
        }];
		this.tools = [{
			text:'发布',
			xtype: 'button',
			iconCls: 'x-fa fa-circle-o',
			handler: 'confirmAttachment'
		},{
			text:'关闭',
			xtype: 'button',
			iconCls: 'x-fa fa-close',
			handler: 'cancelAttachment'
		
		}];
		this.callParent(arguments);
	}
});
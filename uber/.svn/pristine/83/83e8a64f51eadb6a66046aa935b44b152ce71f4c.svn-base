Ext.define('ExtApp.view.projectmanagement.issue.contribution.ContributionReferenceChart',{
	extend: 'Ext.container.Container',
	xtype: 'contributionreferencechart',
	layout: 'fit',
	initComponent: function () {
		var contribute = Ext.create('ExtApp.store.projectmanagement.ContributionStore',{
			sorters: [{
				property: 'referenceCount',
				direction: 'DESC' // or 'ASC'
			}]
		});
		this.items = [{
			xtype: 'cartesian',
			store: contribute,
			axes: [{
				type: 'numeric',
				grid: true,
				position: 'left',
				title: {
					text: 'Reference Count',
					fontSize: 15
				},
				fields: 'referenceCount'
			}, {
				type: 'category',
				position: 'bottom',
				title: {
					text: 'Contribution',
					fontSize: 15
				},
				label: {
		            	rotate: {
		            		degrees: -45
		            	}
				},
				fields: 'contribution'
			}],
			series: {
				type: 'bar',
				style: {
					width: 50    //<-- Specify you Column width here
				},
				subStyle: {
					fill: ['#388FAD'],
					stroke: '#1F6D91'
				},
				xField: 'contribution',
				yField: 'referenceCount'
			}
		}];
		this.callParent();
	}
});
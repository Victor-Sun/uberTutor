Ext.define('ExtApp.view.myworkspace.task.PmTaskApproval',{
	extend:'Ext.window.Window',
	xtype:'pmTaskApproval',
	
	width:400,
	height:170,
	
	closable: false,
	modal: true,
	
	title:'审批批示',
	
	controller: 'pmTaskApproval',
	
	layout: 'fit',
	
	initComponent: function() {
		
		this.items = [{
			xtype: 'form',
			layout: 'column',
		    margin:20,
		    items: [{
				xtype: 'textareafield',
				columnWidth:1,
				name: 'comment',
				maxLength: 500,
				allowBlank: false,
				emptyText: '--请输入备注--'
			}]
		}];
		
		this.tools = [{
			text:'确定',
	        xtype: 'button',
	        iconCls: 'x-fa fa-save',
	        handler: 'confirm'
	    },{
			text:'关闭',
	        xtype: 'button',
	        iconCls: 'x-fa fa-close',
	        handler: 'closeWindow'
		}];
		
		this.callParent();
	}
});
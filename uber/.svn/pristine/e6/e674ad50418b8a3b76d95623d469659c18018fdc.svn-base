/**
 * 项目管理-	xx项目-状态报告-项目编辑状态Controller
 */
Ext.define('ExtApp.view.projectmanagement.report.ProjectDBStatusReport01Controller', {
    extend: 'Ext.app.ViewController',
    alias: 'controller.projectDBStatusReport01',

    //确认
    confirm: function(btn) {
    	var me = this;
        var form = this.view.down('form').getForm();
        if (form.isValid()){
        	me.view.mask('Please Waiting...');
            form.submit({
                clientValidation: true,
                url: '/pdms/pm/project-status-report!updateProjectStatusReport.action',
                params: {
                	statusReportId: this.view.statusReportData.id,
                	programId: this.view.statusReportData.programId,
                	vehicleId: this.view.statusReportData.programVehicleId,
                	model: Ext.encode(form.getFieldValues())
                },
                scope: me,
                success: function(form, action) {
                	me.view.unmask();
                	ExtApp.util.Util.showToast("更新成功！");
                	me.view.parentCaller.refreshView();
                	me.view.close();
                },
                failure: function(form, action) {
                	me.view.unmask();
                	ExtApp.util.Util.handleFormFailure(action);
                }
            });
        }
    },

    //取消
    cancel: function() {
    	this.view.close();
    }

});
